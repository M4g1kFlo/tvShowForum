{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('authlogout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

    <div class="form-contain">
        <div class="form-div mb">
            <label for="inputEmail">Nickname</label>
            <input value="{{ last_pseudo }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
        </div>
    
        <div class="form-div mb">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button style="cursor: pointer;" class="btn-submit w-100" type="submit">
            Se connecter
        </button>
    </div>

</form>
{% endblock %}
