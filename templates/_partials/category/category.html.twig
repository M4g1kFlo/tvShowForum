<div>
    <a href="{{ path('category-id', {slug: category.slug}) }}">
        {{category.title}} : {{category.posts|length}} topics.
    </a>
    {% if app.user and 'ROLE_ADMINISTRATOR' in app.user.roles %}
        <a class="user-button blue" href="{{ path('category-edit', {slug: category.slug}) }}" class="">
            Modifier
        </a>
    {% endif %}
</div>